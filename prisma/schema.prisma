generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

// Modelo de usuários
// Relacionamento: 1 usuário -> N pedidos
model Users {
  id           Int      @id @default(autoincrement())
  username     String
  email        String   @unique
  password     String
  creationDate DateTime @default(now())

  order        Order[]
}

// Modelo de pedido
// Relacionamento: N pedidos -> 1 usuário
//                 1 pedido  -> N itens
model Order {
  orderId      String   @id                  
  userId       Int
  value        Float
  creationDate DateTime

  users        Users   @relation(fields: [userId], references: [id], onDelete: Cascade)
  items        Items[]
}

// Modelo de itens
// Relacionamento: N itens -> 1 pedido
model Items {
  productId String  @id
  orderId   String
  quantity  Int
  price     Float

  order     Order   @relation(fields: [orderId], references: [orderId], onDelete: Cascade)
}